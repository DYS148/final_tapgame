<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/record_skill2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="金錢手等級:"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/record_skill1"
            app:layout_constraintTop_toBottomOf="@+id/record_skill1" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="64dp"
            android:text="登出"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:backgroundTint="#BCAFAF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/record_playtime" />

        <TextView
            android:id="@+id/record_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="ID:"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/record_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="金錢:"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/record_id"
            app:layout_constraintTop_toBottomOf="@+id/record_id" />

        <TextView
            android:id="@+id/record_skill1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="重擊等級:"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/record_money"
            app:layout_constraintTop_toBottomOf="@+id/record_money" />

        <TextView
            android:id="@+id/record_skill3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="爆擊星等級:"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/record_skill2"
            app:layout_constraintTop_toBottomOf="@+id/record_skill2" />

        <TextView
            android:id="@+id/record_totalKill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="總擊殺數:"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/record_skill3"
            app:layout_constraintTop_toBottomOf="@+id/record_skill3" />

        <TextView
            android:id="@+id/record_totalMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="總獲得金錢:"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/record_totalKill"
            app:layout_constraintTop_toBottomOf="@+id/record_totalKill" />

        <TextView
            android:id="@+id/record_helper1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="幫手一等級:"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/record_totalMoney"
            app:layout_constraintTop_toBottomOf="@+id/record_totalMoney" />

        <TextView
            android:id="@+id/record_helper2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="幫手二等級:"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/record_helper1"
            app:layout_constraintTop_toBottomOf="@+id/record_helper1" />

        <TextView
            android:id="@+id/record_helper3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="幫手三等級:"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/record_helper2"
            app:layout_constraintTop_toBottomOf="@+id/record_helper2" />

        <TextView
            android:id="@+id/record_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="關卡:"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/record_helper3"
            app:layout_constraintTop_toBottomOf="@+id/record_helper3" />

        <TextView
            android:id="@+id/record_playtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="遊玩時間:"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/record_stage"
            app:layout_constraintTop_toBottomOf="@+id/record_stage" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>